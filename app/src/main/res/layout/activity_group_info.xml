<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/groupIconIv"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"/>
            <TextView
                android:id="@+id/descriptionTv"
                android:background="#54000000"
                android:layout_width="match_parent"
                android:text="@string/descripci_n_del_grupo"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/colorWhite"
                android:layout_above="@+id/createdByTv"/>

            <TextView
                android:id="@+id/createdByTv"
                android:background="#54000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="@string/creado_por_abc_el_dd_mm_yyyy"
                android:layout_alignParentBottom="true"
                android:textSize="12sp"
                android:padding="5dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/editGroupTv"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/editar_grupo"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            app:drawableStartCompat="@drawable/ic_edit_white"
            app:drawableTint="@color/colorBlack" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"/>
        <TextView
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:id="@+id/addParticipantTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a_adir_participante"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            app:drawableStartCompat="@drawable/ic_addperson_white"
            app:drawableTint="@color/colorBlack" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"/>
        <TextView
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:id="@+id/leaveGroupTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/salir_del_grupo"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            app:drawableStartCompat="@drawable/ic_delete_black"
            app:drawableTint="@color/colorBlack" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"/>
        <TextView
            android:id="@+id/participantsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/participantes_n"
            android:padding="5dp"
            android:textColor="@color/colorBlack"
            app:drawableStartCompat="@drawable/ic_users_black" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eee"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/participantsRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/row_participant_add"/>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>