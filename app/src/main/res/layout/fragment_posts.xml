<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PostsFragment">
<com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle" android:tag="binding_1">
        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                           xmlns:tools="http://schemas.android.com/tools"
                                           android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           app:cardCornerRadius="10dp"
                                           app:cardElevation="3dp"
                                           app:cardUseCompatPadding="true"
                                           app:contentPadding="5dp">


            <LinearLayout
                    android:id="@+id/postsRv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                        android:id="@+id/profileLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <!--    <androidx.cardview.widget.CardView
                                app:cardCornerRadius="15dp"
                                android:layout_marginStart="5dp"
                                android:background="@drawable/layout_user_list_border"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:id="@+id/uPictureIv"
                                    android:background="#ECECEC"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:contentDescription="coverimg"/>
                        </androidx.cardview.widget.CardView>-->
                    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
                            android:layout_width="50dp"
                            android:src="@drawable/ic_default_img_white"
                            android:layout_height="50dp"
                            android:id="@+id/uPictureIv"
                    />


                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:orientation="vertical">

                        <TextView
                                android:id="@+id/uPseudonymTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="20sp" />

                        <TextView
                                android:id="@+id/uPracticTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15sp" />

                        <TextView
                                android:id="@+id/pTimeTv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="" />

                    </LinearLayout>

                    <ImageButton
                            android:id="@+id/moreBtn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@null"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/ic_more_black" />


                </LinearLayout>

                <TextView
                        android:id="@+id/pTitleTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="all"
                        android:text=""
                        android:textSize="16sp"
                        android:textStyle="bold" />



                <FrameLayout android:layout_height="wrap_content"
                             android:layout_width="match_parent">
                    <ImageView
                            android:id="@+id/pImageIv"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:adjustViewBounds="true"
                            android:autoLink="all"
                            android:background="@color/colorWhite"
                            android:contentDescription="@string/todo"
                            android:cropToPadding="false"
                            android:visibility="visible"
                    />
                    <Button
                            android:layout_width="65dp"
                            android:background="@drawable/ic_play"
                            android:layout_height="55dp"
                            android:visibility="gone"
                            android:id="@+id/playBtn"
                            android:layout_gravity = "center"
                    />
                    <com.google.android.exoplayer2.ui.PlayerView
                            app:show_timeout="0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/player"
                            app:use_controller="true"
                            android:layout_margin="5dp"
                            android:visibility="gone"
                            app:player_layout_id="@layout/exo_player_view"
                            app:controller_layout_id="@layout/audio_controller"/>

                </FrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:id="@+id/imageView2"
                            app:flow_horizontalAlign="center"
                            app:flow_verticalAlign="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:visibility="gone"
                            android:adjustViewBounds="true"

                            tools:ignore="MissingConstraints"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" android:contentDescription="@string/big_image"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="MissingConstraints">
                        <ImageView
                                android:id="@+id/ic_arrow_left"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.5"
                                android:rotation="225"
                                android:scaleX="0.2"
                                android:scaleY="0.2"
                                android:src="@drawable/ic_arrow_right"
                                android:visibility="gone" />

                        <ImageView
                                android:id="@+id/ic_arrow_right"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.5"
                                android:rotation="45"
                                android:layout_gravity="center_vertical"
                                android:scaleX="0.2"
                                android:scaleY="0.2"
                                android:src="@drawable/ic_arrow_right"
                                android:visibility="gone" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageButton
                        android:id="@+id/zoomInBtn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="?android:selectableItemBackground"
                        android:scaleX="2"
                        android:scaleY="2"
                        android:src="@drawable/zoom_in"
                        android:translationX="10dp"
                        android:translationY="-45dp" />
                <ImageButton
                        android:id="@+id/zoomOutBtn"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="?android:selectableItemBackground"
                        android:scaleX="2"
                        android:scaleY="2"
                        android:visibility="gone"
                        android:src="@drawable/ic_baseline_zoom_out_24"
                        android:translationX="10dp"
                        android:translationY="-45dp" />
                <TextView
                        android:id="@+id/pDescriptionTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text=""
                        android:textColor="@color/colorPrimaryDark" />
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:id="@+id/pLikesTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/colorPrimary" />

                    <TextView
                            android:id="@+id/pCommentsTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:text=""
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F5F0F0" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <Button
                            android:id="@+id/likeBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableStart="@drawable/ic_like_black"
                            android:drawablePadding="5dp"
                            android:text="@string/like" />

                    <Button
                            android:id="@+id/commentBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableStart="@drawable/ic_comment_black"
                            android:drawablePadding="5dp"
                            android:text="@string/comentar" />

                    <Button
                            android:id="@+id/shareBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:drawableStart="@drawable/ic_share_black"
                            android:drawablePadding="5dp"
                            android:text="@string/compartir" />

                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>






    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>


        <!-- TODO: Update blank fragment layout -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

</FrameLayout>




